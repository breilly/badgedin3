<%= simple_form_for(@message, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :class => "span4" } %>
    <%= f.input :email, :input_html => { :class => "span4" } %>
    <%= f.input :body, as: :text, :input_html => { :rows => 4, :class => "span4" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send message", class: "pull-right" %>
  </div>
<% end %>
