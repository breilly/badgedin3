<div class="container">
  <div class="content">

	
<%= image_tag("https://s3.amazonaws.com/badgedin/badges/Facebook+Admin+Panel+Badge.png", alt: "Facebook Admin Panel badge", id: "quiz_badge") %>

<h2 align="center">Congrats!  You've earned the Facebook Admin Panel badge!</h2>

<%= simple_form_for(@badge) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :badge_name, as: 'hidden', input_html: { value: 'Facebook Admin Panel' } %>
    <%= f.input :badge_url, as: 'hidden', input_html: { value: 'https://s3.amazonaws.com/badgedin/badges/Facebook+Admin+Panel+Badge.png' } %>
    <%= f.input :user_id, as: 'hidden', value: @user %>
  </div>

    <h3 align="center"><%= f.button :submit, "Add badge to profile", class: 'btn-success' %></h3>

<% end %>
  </div>
</div>