<%= simple_form_for(@socialreview, html: { class: "span4 well" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :website, placeholder: 'www.badgedin.com', :input_html => { :class => "span4" } %>
    <%= f.input :network, placeholder: 'Facebook', label: 'Which social network?', :input_html => { :class => "span4" } %>
    <%= f.input :budget, placeholder: '$250', label: 'Monthly budget', :input_html => { :class => "span4" } %>
    <%= f.input :goal, placeholder: 'To add 1000 followers.', label: 'Goal of Social Media campaign', input_html: { :class => "span4" } %>
    <%= f.input :steps, placeholder: 'Launching a promotional contest...', label: "What's your plan?", input_html: { :class => "span4" } %>
    <%= f.input :fans, placeholder: '10,000', label: "Number of fans/followers", input_html: { :class => "span4" } %>
    <%= f.input :timeline, placeholder: '3 months', :input_html => { :class => "span4" } %>
    <%= f.input :email, as: 'hidden', input_html: { value: @user } %>
    <%= f.input :name, as: 'hidden', input_html: { value: @planner } %>
    <%= f.input :user_id, as: 'hidden', value: @user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit plan" %>
    <%= link_to "Cancel", :back, class: "btn" %>
  </div>
<% end %>
